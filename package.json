{
  "name": "sahkokilta-advertisement-tv",
  "version": "1.0.0",
  "description": "Advertisement TV system for Sähkökilta ry featuring guild branding and sponsor carousel",
  "main": "index.js",
  "scripts": {
    "start": "electron js/electron.js",
    "dev": "npm run start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:validate": "node tests/coverage-validator.js",
    "test:e2e": "jest tests/e2e --testTimeout=30000",
    "test:performance": "jest tests/performance --testTimeout=60000",
    "test:integration": "jest tests/integration --testTimeout=20000",
    "test:cypress": "cypress run",
    "test:cypress:open": "cypress open",
    "test:all": "npm run test:coverage && npm run test:e2e && npm run test:performance",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "npm run lint && npm run test",
    "install:magicmirror": "git clone https://github.com/MichMich/MagicMirror.git && cd MagicMirror && npm install",
    "setup": "npm install && npm run install:magicmirror"
  },
  "keywords": [
    "magicmirror",
    "advertisement",
    "raspberry-pi",
    "sahkokilta",
    "sponsor-carousel",
    "guild-branding"
  ],
  "author": "Sähkökilta ry",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chokidar": "^3.5.3",
    "fs-extra": "^11.2.0",
    "lodash": "^4.17.21",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "cypress": "^13.6.2",
    "electron": "^28.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "puppeteer": "^21.6.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sahkokilta/advertisement-tv.git"
  },
  "bugs": {
    "url": "https://github.com/sahkokilta/advertisement-tv/issues"
  },
  "homepage": "https://github.com/sahkokilta/advertisement-tv#readme"
}
